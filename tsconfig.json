{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "outDir": "./dist",      // Output directory for compiled JS
    "rootDir": "./",         // Input directory for TS files (root directory)
    "moduleResolution": "node"
  },
  "include": ["*.ts"],       // Include all TS files in the root directory
  "exclude": ["node_modules"]
}
